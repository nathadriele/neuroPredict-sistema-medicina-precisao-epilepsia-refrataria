# ============================================================================
# NeuroPredict - Variáveis de Ambiente
# ============================================================================
# Copie este arquivo para .env e preencha com suas credenciais

# ----------------------------------------------------------------------------
# Aplicação
# ----------------------------------------------------------------------------
PROJECT_NAME=NeuroPredict
VERSION=0.1.0
DEBUG=false
ENVIRONMENT=development  # development, staging, production

# ----------------------------------------------------------------------------
# PostgreSQL
# ----------------------------------------------------------------------------
DB_HOST=localhost
DB_PORT=5432
DB_NAME=neuropredict
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# ----------------------------------------------------------------------------
# Neo4j (Grafo de Conhecimento)
# ----------------------------------------------------------------------------
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password_here
NEO4J_DATABASE=neo4j

# ----------------------------------------------------------------------------
# Redis (Cache)
# ----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0
REDIS_TTL=3600

# ----------------------------------------------------------------------------
# MLFlow
# ----------------------------------------------------------------------------
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=neuropredict_experiments

# ----------------------------------------------------------------------------
# LLM Configuration
# ----------------------------------------------------------------------------
# Provider: openai ou anthropic
LLM_PROVIDER=openai
LLM_MODEL_NAME=gpt-4-turbo-preview
LLM_API_KEY=your_openai_api_key_here
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=2000

# Embeddings
LLM_EMBEDDING_MODEL=text-embedding-3-small

# RAG
LLM_CHUNK_SIZE=1000
LLM_CHUNK_OVERLAP=200
LLM_TOP_K=5
LLM_CHROMA_PERSIST_DIRECTORY=./data/chroma_db

# ----------------------------------------------------------------------------
# API Configuration
# ----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false
API_WORKERS=4

# CORS
API_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8501"]

# Rate Limiting
API_RATE_LIMIT=100  # requests per minute

# JWT
API_SECRET_KEY=your_secret_key_for_jwt_here
API_ALGORITHM=HS256
API_ACCESS_TOKEN_EXPIRE_MINUTES=30

# ----------------------------------------------------------------------------
# Modelo ML
# ----------------------------------------------------------------------------
MODEL_ENSEMBLE_MODELS=["xgboost", "lightgbm", "catboost", "neural_net"]
MODEL_ENSEMBLE_METHOD=weighted_voting
MODEL_CV_FOLDS=5
MODEL_RANDOM_STATE=42
MODEL_N_JOBS=-1

# Hiperparâmetros
MODEL_HPO_TRIALS=100
MODEL_HPO_TIMEOUT=3600

# Neural Network
MODEL_BATCH_SIZE=32
MODEL_EPOCHS=100
MODEL_LEARNING_RATE=0.001
MODEL_EARLY_STOPPING_PATIENCE=10

# GNN
MODEL_GNN_HIDDEN_CHANNELS=128
MODEL_GNN_NUM_LAYERS=3
MODEL_GNN_DROPOUT=0.3

# ----------------------------------------------------------------------------
# Data Configuration
# ----------------------------------------------------------------------------
DATA_RAW_PATH=./data/raw
DATA_PROCESSED_PATH=./data/processed
DATA_EXTERNAL_PATH=./data/external

DATA_MIN_SAMPLES=100
DATA_TEST_SIZE=0.2
DATA_VAL_SIZE=0.1

# ----------------------------------------------------------------------------
# Logging
# ----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FILE_PATH=./logs/neuropredict.log
LOG_ROTATION=100 MB
LOG_RETENTION=30 days

# ----------------------------------------------------------------------------
# Monitoramento
# ----------------------------------------------------------------------------
# Prometheus
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
GRAFANA_PORT=3000

# ----------------------------------------------------------------------------
# AWS (para deploy em produção)
# ----------------------------------------------------------------------------
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here

# ECS
AWS_ECS_CLUSTER=neuropredict-cluster
AWS_ECS_SERVICE=neuropredict-api

# S3
AWS_S3_BUCKET=neuropredict-data

# ----------------------------------------------------------------------------
# Docker
# ----------------------------------------------------------------------------
DOCKER_USERNAME=your_docker_username
DOCKER_PASSWORD=your_docker_password

# ----------------------------------------------------------------------------
# Notificações
# ----------------------------------------------------------------------------
SLACK_WEBHOOK=your_slack_webhook_url_here
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SENDER=neuropredict@example.com
EMAIL_PASSWORD=your_email_password_here

# ----------------------------------------------------------------------------
# PubMed (para RAG)
# ----------------------------------------------------------------------------
PUBMED_EMAIL=your_email@example.com
PUBMED_API_KEY=your_ncbi_api_key_here

# ----------------------------------------------------------------------------
# Feature Flags
# ----------------------------------------------------------------------------
FEATURE_RAG_ENABLED=true
FEATURE_KNOWLEDGE_GRAPH_ENABLED=true
FEATURE_EXPLAINABILITY_ENABLED=true
FEATURE_REAL_TIME_PREDICTIONS=true

# ----------------------------------------------------------------------------
# Security
# ----------------------------------------------------------------------------
SECURITY_ALLOWED_HOSTS=["localhost", "127.0.0.1"]
SECURITY_SSL_REDIRECT=false
SECURITY_CSRF_COOKIE_SECURE=false
SECURITY_SESSION_COOKIE_SECURE=false

# ----------------------------------------------------------------------------
# Backup
# ----------------------------------------------------------------------------
BACKUP_ENABLED=true
# BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=neuropredict-backups